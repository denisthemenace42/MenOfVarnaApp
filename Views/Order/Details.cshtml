@model Men_Of_Varna.Models.Order.OrderDetailsViewModel

@{
    ViewData["Title"] = "Order Details";
}

<div class="container mt-4">
    <h2 class="mb-4">Order Details</h2>

    <!-- Order Summary -->
    <div class="card mb-4">
        <div class="card-header">
            <h4>Order #@Model.OrderId</h4>
        </div>
        <div class="card-body">
            <p><strong>Order Date:</strong> @Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</p>
            <p><strong>Shipping Address:</strong> @Model.ShippingAddress, @Model.ShippingCity - @Model.ShippingZip</p>
            <p><strong>Order Status:</strong> @Model.OrderStatus</p>
            <p><strong>Total Amount:</strong> @Model.OrderTotal.ToString("C")</p>
        </div>
    </div>

    <!-- Product List -->
    <h4>Products in this Order</h4>
    <table class="table table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Product Name</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Quantity</td>
                    <td>@product.Price.ToString("C")</td>
                    <td>@product.TotalPrice.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Back Button -->
    <div class="mt-3">
        <a asp-controller="Order" asp-action="History" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Order History
        </a>
    </div>
</div>
