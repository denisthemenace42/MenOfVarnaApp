@{
    ViewData["Title"] = "Home";
}

<div class="container mt-5 welcome-section">
    <div class="row justify-content-center">
        <div class="col-md-8 col-sm-10 text-center">
            <img src="~/images/logo.png"
                 alt="Welcome to Men Of Varna"
                 class="img-fluid mb-4"
                 style="border-radius: 10px; max-width: 35%; height: auto;">
            <h1 class="display-4">Welcome to Men Of Varna</h1>
            <p class="lead">Join the brotherhood and be part of the movement to being greater man!</p>
            <a href="/Identity/Account/Register" class="btn btn-primary btn-lg mt-3">Start Your Adventure</a>
        </div>
    </div>
</div>

<div class="container mt-4 explore-section">
    <h2 class="text-center section-title">Our Activitys</h2>
    <div class="row mt-4">
        <div class="col-lg-4 col-md-6 col-sm-12 text-center mb-4">
            <img src="/images/bookdiscussion.jpg" class="img-fluid rounded" alt="Mountains">
            <h5 class="mt-3">Book Discussions</h5>
            <p>Engage in transformative conversations about thought-provoking books that inspire personal growth and masculinity.</p>
        </div>
        <div class="col-lg-4 col-md-6 col-sm-12 text-center mb-4">
            <img src="/images/Calisthenics.jpg" class="img-fluid rounded" alt="Beaches">
            <h5 class="mt-3">Group Workouts</h5>
            <p>Build strength, discipline, and a sense of brotherhood through dynamic outdoor training sessions designed for all fitness levels.</p>
        </div>
        <div class="col-lg-4 col-md-6 col-sm-12 text-center mb-4">
            <img src="/images/Coldexposure.jpg" class="img-fluid rounded" alt="Fields">
            <h5 class="mt-3">Cold Exposure</h5>
            <p>Challenge your limits and embrace resilience with invigorating cold exposure sessions that forge both body and mind.</p>
        </div>
    </div>
</div>
